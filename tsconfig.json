{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@svg/*": [
        "app/assets/svg/*"
      ],
      "~/*": [
        "app/javascript/*"
      ]
    }
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "compileOnSave": false
}